<%= turbo_frame_tag dom_id(todo) do %>
  <div class="p-4 bg-white rounded-lg flex items-center space-x-2">
    <%= link_to todo_path(todo, todo: { done: !todo.done? }), data: { turbo_method: :patch } do %>
      <%# Check box %>
      <% if todo.done? %>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
          <path fill-rule="evenodd" d="M2.25 12c0-5.385 4.365-9.75 9.75-9.75s9.75 4.365 9.75 9.75-4.365 9.75-9.75 9.75S2.25 17.385 2.25 12zm13.36-1.814a.75.75 0 10-1.22-.872l-3.236 4.53L9.53 12.22a.75.75 0 00-1.06 1.06l2.25 2.25a.75.75 0 001.14-.094l3.75-5.25z" clip-rule="evenodd" />
        </svg>
      <% else %>
        <div class="rounded-full bg-gray-200 h-6 w-6"></div>
      <% end %>
    <% end %>
    <%# name of task %>
    
    <p class="<%= todo.done? ? 'line-through' : '' %>"><%= todo.name %></p>
  </div>
<% end %>