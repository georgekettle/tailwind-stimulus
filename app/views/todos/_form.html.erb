<%= form_with(model: [goal, todo], class: "contents", id: dom_id(goal, :todo_form)) do |form| %>
  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, placeholder: "What next?", class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>