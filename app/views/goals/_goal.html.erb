<%# Goal column %>
<div>
  <%# Need to display name and emoji %>
  <div class="flex items-center justify-between mb-4">
    <div class="flex items-center">
      <div class="rounded-full bg-violet-100 h-8 w-8 flex items-center justify-center mr-2">
        <span class="text-sm"><%= goal.emoji %></span>
      </div>
      <h2 class="font-semibold text-lg"><%= goal.name %></h2>
    </div>
    <%= render 'goals/todo_counter', goal: goal %>
  </div>
  <%# List of all todos for this goal %>
  <div class="bg-gray-100 rounded-lg p-4 space-y-4">
    <%# Display all todos %>
    <%= turbo_frame_tag dom_id(goal, :task_list), src: todos_goal_path(goal) do %>
      <%# Loading skeleton %>
      <div class="border border-blue-300 shadow rounded-md p-4 max-w-sm w-full mx-auto">
        <div class="animate-pulse flex space-x-4">
          <div class="rounded-full bg-slate-700 h-10 w-10"></div>
          <div class="flex-1 space-y-6 py-1">
            <div class="h-2 bg-slate-700 rounded"></div>
            <div class="space-y-3">
              <div class="grid grid-cols-3 gap-4">
                <div class="h-2 bg-slate-700 rounded col-span-2"></div>
                <div class="h-2 bg-slate-700 rounded col-span-1"></div>
              </div>
              <div class="h-2 bg-slate-700 rounded"></div>
            </div>
          </div>
        </div>
      </div>
    <% end %>  
    <%# New todo button/modal %>
    <%= render 'todos/form', goal: goal, todo: @todo %>
    <%# link_to 'New Todo', new_goal_todo_path(goal), class: 'bg-violet-500 hover:bg-violet-700 text-white font-bold py-3 px-6 rounded w-full block text-center' %>
  </div>
</div>
