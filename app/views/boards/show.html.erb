<div class="container mx-auto sm:px-6 lg:px-8 py-10">
  <!-- Content goes here -->
  <div class="md:flex md:items-center md:justify-between mb-10">
    <div class="min-w-0 flex-1">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight"><%= @board.name %></h2>
    </div>
  </div>

  <%# PHOTO GRID %>
  <ul role="list" class="grid grid-cols-2 gap-x-4 gap-y-8 sm:grid-cols-3 sm:gap-x-6 lg:grid-cols-4 xl:gap-x-8">
    <% @board.photos.each do |photo| %>
      <%= render 'photos/photo', photo: photo %>
    <% end %>
    <% if @board.photos.empty? %>
      <p>No photos for this board....</p>
    <% end %>
  </ul>
</div>
